<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/notes_green</item>
        <item name="colorPrimaryVariant">@color/notes_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white </item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/notes_grey</item>
        <item name="colorSecondaryVariant">@color/notes_grey_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/notes_green_transparent
        </item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NotesApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NotesApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NotesApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleBarTextAppearance" parent=" ">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Widget.App.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ExposedDropdownMenu</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="popupMenuBackground">@drawable/popmenu_background</item>
        <item name="endIconTint">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.ExposedDropdownMenu" parent="">
        <item name="colorPrimary">@color/notes_green</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="autoCompleteTextViewStyle">
            @style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox
        </item>
    </style>

</resources>